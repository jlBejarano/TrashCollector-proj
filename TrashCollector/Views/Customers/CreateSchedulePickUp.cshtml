@model TrashCollector.Models.CustomerSchedulePU

@{
    ViewData["Title"] = "CreateSchedulePickUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Schedule Pick-Up</h1>

<h4>CustomerSchedulePU</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSchedulePickUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label">DayOfWeek</label>
                <select asp-for="DayOfWeek" id="DaysOfWeek" name="DayOfWeek">
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <input asp-for="DayOfWeek" class="form-control" />
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendStartDate" class="control-label"></label>
                <input asp-for="SuspendStartDate" class="form-control" />
                <span asp-validation-for="SuspendStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendEndDate" class="control-label"></label>
                <input asp-for="SuspendEndDate" class="form-control" />
                <span asp-validation-for="SuspendEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

